            <ChoiceBox fx:id="switchLocalization" layoutX="295.0" layoutY="169.0" prefHeight="25.0" prefWidth="185.0" />
            <Button fx:id="offChat" layoutX="336.0" layoutY="286.0" mnemonicParsing="false" onAction="#pressMyButtonOffChat" prefHeight="25.0" prefWidth="141.0" text="Отключиться от чата" />
            </children>
            <effect>
                <Glow level="0.18" />
            </effect>
        </AnchorPane>
    </children>
