<GridPane alignment="center" hgap="10" prefHeight="600.0" prefWidth="513.0" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Controller">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <AnchorPane prefHeight="800.0" prefWidth="500.0" style="-fx-border-color: #2E3348;">
            <children>
            <AnchorPane layoutX="2.0" prefHeight="107.0" prefWidth="513.0" style="-fx-background-color: #778899;">
               <children>
                  <Label layoutX="144.0" layoutY="14.0" text="BolTalCa" textFill="#fffdfd99">
                     <font>
                        <Font name="Comic Sans MS" size="56.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
                <Label layoutX="27.0" layoutY="290.0" text="Чат" />
                <Button fx:id="myButtonCreate" layoutX="25.0" layoutY="131.0" mnemonicParsing="false" onAction="#pressMyButtonCreateNik" prefHeight="25.0" prefWidth="185.0" text="Создать ник и подключиться" />
                <Button fx:id="myButtonSend" layoutX="25.0" layoutY="253.0" mnemonicParsing="false" onAction="#pressMyButtonSend" text="Отправить сообщение" />
